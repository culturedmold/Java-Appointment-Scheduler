   <children>
      <VBox layoutY="71.0" minWidth="400.0" prefHeight="295.0" prefWidth="573.0" spacing="5.0" AnchorPane.leftAnchor="25.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
