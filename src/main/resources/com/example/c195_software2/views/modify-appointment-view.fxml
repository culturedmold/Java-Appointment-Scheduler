               <TextField fx:id="appt_start_time_field" promptText="hh:mm">
                  <tooltip>
                     <Tooltip text="Use format hh:mm a, such as: 07:30 PM. Business Hours: 8:00 AM - 10:00 PM M-F" />
                  </tooltip></TextField>
               <ComboBox fx:id="start_am_pm_combobox" prefWidth="150.0" promptText="AM/PM" />
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
               <Label minWidth="100.0" prefWidth="100.0" text="End Time" />
               <DatePicker fx:id="modify_appt_end_date_picker" promptText="Select End Date" />
               <TextField fx:id="appt_end_time_field" promptText="hh:mm">
                  <tooltip>
                     <Tooltip text="Use format hh:mm a, such as: 07:30 PM. Business Hours: 8:00 AM - 10:00 PM M-F" />
                  </tooltip></TextField>
               <ComboBox fx:id="end_am_pm_combobox" prefWidth="150.0" promptText="AM/PM" />
            </HBox>
