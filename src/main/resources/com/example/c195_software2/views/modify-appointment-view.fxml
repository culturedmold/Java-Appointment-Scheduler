               <children>
                  <Label prefWidth="100.0" text="Title" />
                  <TextField fx:id="appointment_title_field" promptText="Title" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
               <children>
                  <Label prefWidth="100.0" text="Description" />
                  <TextField fx:id="appointment_description_field" promptText="Description" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
