<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="login_pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.c195_software2.controller.LoginViewController">
   <VBox layoutX="122.0" layoutY="30.0" spacing="12.0">
      <children>
         <Label fx:id="login_title" maxWidth="600.0" prefWidth="400.0" text="Appointment Scheduler">
            <font>
               <Font size="36.0" />
            </font>
            <padding>
               <Insets bottom="50.0" />
            </padding>
         </Label>
         <TextField fx:id="username_field" prefHeight="25.0" prefWidth="250.0" promptText="Username" />
         <TextField fx:id="password_field" prefWidth="250.0" promptText="Password" />
         <HBox alignment="CENTER" spacing="25.0">
            <children>
               <Button fx:id="login_button" defaultButton="true" mnemonicParsing="false" onAction="#loginAction" text="Login" />
               <Button fx:id="exit_button" cancelButton="true" mnemonicParsing="false" onAction="#exitApplication" text="Exit" />
            </children>
         </HBox>
         <Label fx:id="locale_label" text="Locale" />
      </children>
   </VBox>
</AnchorPane>
