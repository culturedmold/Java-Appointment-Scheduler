<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.c195_software2.controller.CreateAppointmentViewController">
   <children>
      <VBox prefHeight="500.0" prefWidth="600.0" spacing="12.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
         <children>
            <Label text="Create Appointment">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="100.0" text="Appointment ID" />
                  <TextField fx:id="create_appt_ID_field" editable="false" promptText="ID - Autogenerated" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="100.0" text="Title" />
                  <TextField fx:id="create_appt_title_field" promptText="Max 50 characters" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="100.0" text="Description" />
                  <TextField fx:id="create_appt_description_field" promptText="Max 50 characters" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="100.0" text="Location" />
                  <TextField fx:id="create_appt_location_field" promptText="Max 50 characters" />
               </children>
            </HBox>
            <HBox fx:id="createApptCancel" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label minWidth="100.0" prefWidth="100.0" text="Type " />
                  <TextField fx:id="create_appt_type_field" promptText="Max 50 characters" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="12.0">
               <children>
                  <Label minWidth="100.0" prefWidth="100.0" text="Start" />
                  <DatePicker fx:id="create_appt_start_date_picker" promptText="Select Start Date" />
                  <TextField fx:id="create_appt_start_time_field" promptText="hh:mm">
                     <tooltip>
                        <Tooltip text="Use format hh:mm a, such as: 09:30 AM. Business Hours: 8:00 AM - 10:00 PM M-F" />
                     </tooltip></TextField>
                  <ComboBox fx:id="start_am_pm_combobox" prefWidth="150.0" promptText="AM/PM" />
               </children>
            </HBox>
            <HBox spacing="12.0">
               <children>
                  <Label minWidth="100.0" prefWidth="100.0" text="End" />
                  <DatePicker fx:id="create_appt_end_date_picker" promptText="Select End Date" />
                  <TextField fx:id="create_appt_end_time_field" promptText="hh:mm">
                     <tooltip>
                        <Tooltip text="Use format hh:mm a, such as: 07:30 PM. Business Hours: 8:00 AM - 10:00 PM M-F" />
                     </tooltip></TextField>
                  <ComboBox fx:id="end_am_pm_combobox" prefWidth="150.0" promptText="AM/PM" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="12.0">
               <children>
                  <Label prefWidth="100.0" text="Customer" />
                  <ComboBox fx:id="customer_combobox" prefWidth="150.0" promptText="Select Customer" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="12.0">
               <children>
                  <Label prefWidth="100.0" text="Contact" />
                  <ComboBox fx:id="contact_combobox" prefWidth="150.0" promptText="Select Contact" />
               </children>
            </HBox>
            <HBox prefHeight="56.0" prefWidth="600.0" spacing="12.0">
               <children>
                  <Label prefWidth="100.0" text="User ID" />
                  <TextField fx:id="create_appt_user_ID_field" editable="false" promptText="User ID - Autogenerated" />
               </children>
            </HBox>
            <HBox spacing="25.0">
               <children>
                  <Button fx:id="create_appt_save_button" defaultButton="true" mnemonicParsing="false" onAction="#createNewAppointment" text="Save" />
                  <Button fx:id="create_appt_cancel_button" cancelButton="true" mnemonicParsing="false" onAction="#createApptCancel" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
